// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL_PRISMA") // uses connection pooling
  directUrl = env("POSTGRES_URL") // uses a direct connection
}

model users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  image     String
  createdAt DateTime @default(now())
  quotes    quotes[]
}

model books {
  id           Int      @id @default(autoincrement())
  title        String
  author       String
  image_url    String
  publish_date DateTime
  quotes        quotes[]
}

model quotes {
  id          Int     @id @default(autoincrement())
  title       String?
  quote       String  @db.Text
  page_number Int
  latitude    Float?
  longitude   Float?
  books       books   @relation(fields: [book_id], references: [id])
  book_id     Int
  user_id     Int
  user        users   @relation(fields: [user_id], references: [id])
}
